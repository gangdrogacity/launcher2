{
    "modpack_info": {
        "name": "WTF Modpack",
        "version": "1.0r6",
        "minecraft_version": "1.20.1",
        "forge_version": "1.20.1-47.3.33",
        "description": "A comprehensive modpack featuring Create, Immersive Engineering, and many other exciting mods.",
        "repository": "https://github.com/jamnaga/wtf-modpack",
        "author": "jamnaga"
    },
    "system_requirements": {
        "minimum_ram_gb": 4,
        "recommended_ram_gb": 6,
        "java_version": "17+",
        "disk_space_gb": 2
    },
    "download_info": {
        "release_api": "https://api.github.com/repos/jamnaga/wtf-modpack/releases/latest",
        "client_zip_name": "client.zip",
        "auto_check_updates": true,
        "check_interval_hours": 24
    },
    "launch_settings": {
        "default_jvm_args": [
            "-Xmx4G",
            "-Xms4G",
            "-XX:+UnlockExperimentalVMOptions",
            "-XX:+UseG1GC",
            "-XX:G1NewSizePercent=20",
            "-XX:G1ReservePercent=20",
            "-XX:MaxGCPauseMillis=50",
            "-XX:G1HeapRegionSize=32M"
        ],
        "force_minimum_ram": true,
        "validate_java_version": true
    },
    "directories": {
        "mods": "mods",
        "config": "config",
        "saves": "saves",
        "screenshots": "screenshots",
        "logs": "logs"
    }
}
